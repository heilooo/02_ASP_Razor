@page
@model app8_razor.Pages.Articles.EditModel
@{
}
<div class="container" style="direction:rtl">
    ..
    <form class="well form-horizontal" method="post" id="contact_form">
        <input type="hidden" asp-for="Article.Id" />
        <fieldset>
            <!-- Form Name -->
            <legend>ویرایش مقاله!</legend>
            <!-- Text input-->

            <div class="form-group">
                <label asp-for="Article.Title" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon" style="border-top-left-radius:0;border-bottom-left-radius:0;border-left:none;border-right:1px  solid #CCCCCC" border-radios:0 3px 3px 0></span>
                        <input asp-for="Article.Title" placeholder="عنوان مقاله را وارد کنید" class="form-control" type="text">
                    </div>
                    <span asp-validation-for="Article.Title" class="text-danger"></span>
                </div>
            </div>

            <!-- Text input-->

            <div class="form-group">
                <label asp-for="Article.Picture" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        <input asp-for="Article.Picture" placeholder="لینک تصویر مقاله را وارد کنید" class="form-control" type="text">
                    </div>
                    <span asp-validation-for="Article.Picture" class="text-danger"></span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label asp-for="Article.PictureAlt" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        <input asp-for="Article.PictureAlt" placeholder="متن جایگزین تصویر را وارد کنید" class="form-control" type="text">
                    </div>
                    <span asp-validation-for="Article.PictureAlt" class="text-danger"></span>
                </div>
            </div>


            <!-- Text input-->

            <div class="form-group">
                <label asp-for="Article.PictureTitle" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        <input asp-for="Article.PictureTitle" placeholder="عنوان تصویر را وارد کنید" class="form-control" type="text">
                    </div>
                    <span asp-validation-for="Article.PictureTitle" class="text-danger"></span>
                </div>
            </div>

            <!-- Text input-->

            <div class="form-group">
                <label asp-for="Article.ShortDescription" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        <input asp-for="Article.ShortDescription" placeholder="توضیحات کوتاه مقاله را وارد کنید" class="form-control" type="text">
                    </div>
                    <span asp-validation-for="Article.ShortDescription" class="text-danger"></span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">

                <label asp-for="Article.Body" class="col-md-4 control-label"></label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        <textarea asp-for="Article.Body" id="editor" placeholder="متن مقاله را وارد کنید" class="form-control" type="text"> </textarea>
                    </div>
                    <span asp-validation-for="Article.Body" class="text-danger"></span>
                </div>
            </div>

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-warning">Edit <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>

        </fieldset>
    </form>
</div>

@section Scripts {
    <Partial name="_ValidationScriptsPartial" ; />
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), { language: 'fa' })
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}